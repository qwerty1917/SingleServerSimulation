<!--<!DOCTYPE html>-->
<html>
<head>
  <title><%= @page_title or "Page Title" %></title>
  <meta name="viewport" content="width=device-width, user-scalable=no">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag "layout" %>
  <style><%= yield :stylesheets %></style>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "SIM", {:action => :intro}, class: "navbar-brand"%>
      </div>
  
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><%= link_to 'input schedule', :action => :schedule_input %></li>
          <li><%= link_to 'show list', :action => :schedule_list %></li>
        </ul>
        
        <ul class="nav navbar-nav navbar-right">
          <li><a href="https://github.com/qwerty1917" target="_blank">created by Hyeongmin Park</a></li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>


  <%= yield %>
  <div style="height: 60px;"></div>
  
  <footer class="footer">
    <div class="container">
      <p class="text-muted">Powered by Ruby on Rails</p>
    </div>
  </footer>

</body>
</html>
